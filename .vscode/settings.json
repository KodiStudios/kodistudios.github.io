{
  // Formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Spelling
  "cSpell.allowCompoundWords": true,
  "cSpell.words": [
    "Alki",
    "Aristov",
    "Cloudify",
    "clsx",
    "Infima",
    "Kodi",
    "kodistudios",
    "mywebsite",
    "nikoari",
    "Sakura",
    "Tldr",
    "Tonivo",
    "xcopy",
    "yoururl"
  ],

  // Terminal - PowerShell launching CMD for Copilot compatibility
  "terminal.integrated.profiles.windows": {
    "Kodi": {
      "source": "PowerShell",
      "args": ["-NoExit", "-Command", "cmd"],
      "overrideName": true
    }
  },
  "terminal.integrated.defaultProfile.windows": "Kodi"
}
