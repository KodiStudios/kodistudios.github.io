{
  "name": "kodi-website",
  "version": "0.26.1",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "lint": "tsc",
    "//update": "yarn dlx update-browserslist-db updates the caniuse-lite dependency",
    "update": "yarn up \"@docusaurus/*@latest\" \"@mdx-js/react@latest\" prism-react-renderer@latest typescript@latest \"@types/react@^18\" \"@types/react-dom@^18\" && yarn dlx update-browserslist-db@latest",
    "clean": "git clean -xdf ."
  },
  "//dependencies": "react must stay at v18 for Docusaurus 3 compatibility",
  "dependencies": {
    "@docusaurus/core": "^3.9.2",
    "@docusaurus/preset-classic": "^3.9.2",
    "@mdx-js/react": "^3.1.1",
    "clsx": "^2.1.1",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^3.9.2",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "typescript": "^5.9.3"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "//resolutions": "Force single @types/react version to fix type conflicts with @docusaurus/types",
  "resolutions": {
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7"
  },
  "packageManager": "yarn@4.12.0"
}
